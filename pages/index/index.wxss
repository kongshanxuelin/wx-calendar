/* pages/calendar/calendar.wxss */
qqpage,.qqpage {
  font-family: 'PingFang SC', 'Helvetica Neue', Helvetica, 'Droid Sans Fallback', 'Microsoft Yahei', sans-serif;
}
.qqpage-bottom{
  height: 100%;
  width: 132px;
  position: fixed;
  z-index: 0;  
}
.qqpage-content{
    
}
.qqpage-top{
  height: 100%;
  position: fixed;
  width: 750rpx;
  z-index: 10;
  transition: All 0.4s ease;
  background-color:#FFFFFF;
  -webkit-transition: All 0.4s ease;
}
.qqc-state1{
  transform: rotate(0deg) scale(1) translate(33.33%,0%);
  -webkit-transform: rotate(0deg) scale(1) translate(33.33%,0%);
}
/*分隔符*/
