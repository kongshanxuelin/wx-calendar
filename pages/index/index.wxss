/*任务列表样式*/
.flex-wrp{
  display: flex;
}
.tip-item{
  margin: 0 15rpx;
  background: #ffffff;
  align-items: center;
  justify-content: center;
  align-content: space-between;
  
  height:28px;
  line-height: 28px;
  flex-direction:row-reverse;
}
.tip-item text{
    font-size:12px;
}

.notify-item{
  margin: 0 15rpx;
  background: #ffffff;
  padding: 10rpx;
  border-bottom: solid 1px #ebebeb;
}
.notify-item  image{
  width: 64rpx;
  height: 64rpx;
  border-radius: 64rpx;
}
.notify-item .avatar{
    margin-right: 20rpx;
}
.notify-item .notify-content{
  text-align: left;
}

.notify-item .notify-content .notify-source{
  line-height: 48rpx;
  height:48rpx;
  display: flex;
}
.notify-item .notify-content .notify-source text{
  color: #101010;
  font-size: 12px;

  margin-left:5rpx;
}

.notify-item .notify-content .notify-source image{
  width: 48rpx;
  height: 48rpx;
  border-radius: 48rpx;
}
.notify-item .notify-content .notify-title{
  color: #AFAFAF;
  line-height: 34rpx;
  font-size: 12px;
}
