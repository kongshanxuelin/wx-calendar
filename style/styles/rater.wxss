.wux-rater {
	text-align: left;
	display: inline-block;
	line-height: normal;
}

.wux-rater .wux-rater-box {
	display: inline-block;
	text-align: center;
	cursor: pointer;
	color: #ccc;
	transition: color .3s ease;
}

.wux-rater .wux-rater-box:last-child {
	padding-right: 2px!important;
	margin-right: 0px!important;
}

.wux-rater .wux-rater-box.is-disabled {
	color: #ccc !important;
	cursor: not-allowed;
}

.wux-rater-box {
	position: relative;
}

.wux-rater-inner {
	position: relative;
	display: inline-block;
}

.wux-rater-outer {
	position: absolute;
	left: 0;
	top: 0;
	display: inline-block;
	overflow: hidden;
}